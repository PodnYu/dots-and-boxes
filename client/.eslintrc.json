{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"plugins": ["react"],
	"extends": ["eslint:recommended", "plugin:react/recommended"],

	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true,
			"impliedStrict": true
		},
		"ecmaVersion": 2021,
		"sourceType": "module"
	},

	"rules": {
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": ["warn", "windows"],
		"quotes": ["warn", "double"],
		"semi": ["warn", "always"],
		"react/jsx-uses-vars": "error",
		"no-var": "error",
		"no-unused-vars": "warn"
	},
	"root": true
}
